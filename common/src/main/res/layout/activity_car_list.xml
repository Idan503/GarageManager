<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/car_list_LAY_loading"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@android:color/black" />

        <ProgressBar
            android:id="@+id/car_list_PRG_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="42dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_list_LBL_usage_time"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:layout_margin="12dp"
            android:layout_gravity="center_horizontal"

            />

        <TextView
            android:id="@+id/car_list_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/car_list_LBL_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/car_list_LBL_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/car_list_LV_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:id="@+id/car_list_LBL_viewtype"
            android:gravity="bottom|center_horizontal"
            android:textSize="22sp"
            android:layout_marginBottom="12dp"


            />

    </LinearLayout>



</FrameLayout>